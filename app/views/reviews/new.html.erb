<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h3>New <%= @restaurant.name %> review</h3>

      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.button :submit, class: 'btn btn-primary mb-3' %>
      <% end %>

       <%= link_to 'Back to this restaurant', restaurant_path(@restaurant) %>
    </div>
  </div>



</div>
