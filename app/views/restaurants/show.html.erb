<div class="container">
  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>

  <p>
    <strong><%= link_to '+ Add a review', new_restaurant_review_path(@restaurant) %></strong>

  </p>

  <h3>Reviews:</h3>
  <ol>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %></li>
    <% end %>
  </ol>

  <%= link_to 'Back', restaurants_path %>

</div>

